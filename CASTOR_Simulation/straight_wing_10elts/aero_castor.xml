<?xml version="1.0" encoding="utf-8"?>

<CASTOR>

  <!-- Choices for filaments core models:
        - VanGarrel
        - RamasamyLeishman
  -->

  <!-- Choices for particles core models:
       - MooreRosenhead
       - WinckelmansLeonard
  -->

  <!-- Choices for wake type:
       - Free
       - Prescribed
  -->

  <!-- Choices for platform:
       - GPU
       - CPU
  -->

  <!-- Choice of the wake_model:
       - Filaments
       - Particles - shed_length scales the transition from filaments to particles
  -->

  <MODEL name="LiftingLine" wake="Free" wake_model="CUDA_Thrust" particles_merging="Deactivated" filaments_core_model="VanGarrel" particles_core_model="MooreRosenhead" rotation="CLOCK" shed_length="2" length="360" platform="GPU" use_struts="No" type="HAWT"/>

  <SECONDARY_EFFECT stall_model      = "None"
                    tower_shadow     = "Deactivated"
                    threeD_effects   = "None"
  />

  <FLUID density="1.195" viscosity="1.853e-5"/>

  <WAKE_ACCOMODATION>
    <!--<SHED_MERGER at_age="10"/>-->
    <!--<SHED_MERGER at_age="20"/>-->
    <!--<SHED_MERGER at_age="30"/>-->
    <!--<SHED_MERGER at_age="50"/>-->
  </WAKE_ACCOMODATION>


  <WIND>
    <WIND_3D ux="15.0" uy="0." uz="0.0"/>		
  </WIND>
  
  <FARM_OUTPUTS status="Deactivated"/>

  <SPANWISE_OUTPUTS status="Activated" format="asciiDAT" rotor="1" blade="1" nodes=""/>

  <AERO_OUTPUTS format="asciiDAT_IFPEN">
    <NODES_OUTPUTS status="Activated" rotor="1" blade="1" nodes=""/>
  </AERO_OUTPUTS>

  <X_LINES>
  </X_LINES>

  <Y_LINES>
  </Y_LINES>

  <WAKES_OUTPUTS      status="Activated" it_start="1"/>
  <WAKE_FILES_OUTPUTS status="Activated" it_start="1"/>

  <SURFACES>
