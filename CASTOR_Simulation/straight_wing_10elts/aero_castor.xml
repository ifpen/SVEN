<!--    <Z_PLANE id="1" x_min="0" x_max="200" y_min="-150" y_max="150" z="89.885" nb_x="100" nb_y="100" it_start="1"/> -->
  </SURFACES>


  <BOXES>
 <!--       <BOX id="1" x_min="0.0" x_max="35" y_min="-200" y_max="200" z_min="0.0" z_max="200" nb_x="15" nb_y="250" nb_z="250" it_start="36"/>-->
  </BOXES>

  <SENSORS>
  </SENSORS>

  <LIFTING_LINE_MODEL
    max_iteration="40"
    relaxation="0.2"
  />

  <!-- delta and delta_NW should take value between 0.01 and 0.03 (percentage of filament length)    -->
  <!-- High value increase stability, but one should not exceed 0.03 otherwise tip is badly resolved -->
  <VAN_GARREL_CORE_MODEL
    scale_radius= "0.6"
    delta       = "0.5"  
    delta_NW    = "0.5"
  />

  <RAMASAMY_LEISHMAN_CORE_MODEL
    scale_radius="0.2"
    n_Vastisas  ="2.0"  
  />

  <MOORE_ROSENHEAD_CORE_MODEL
    delta="0.15"
  />

  <WINCKELMANS_LEONARD_CORE_MODEL
    delta="0.00035"
  />

</CASTOR>

